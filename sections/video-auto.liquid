{%- style -%}
  .video-auto-loop-wrap, .video-auto-loop-wrap video {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  max-height: 700px;
  object-fit: cover;
  }

  .video-auto-loop-wrap::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.06);
}

.video-center-logo {
  position: absolute;
  top: 44%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 370px; 
  max-height: 370px; 

}


@media screen and (max-width: 500px) {
  .video-center-logo {
    max-width: 260px; 
  max-height: 260px; 

}

}

.video-text {
  position: absolute;
  top: 66%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #ffff;
  font-size: 25px; 
  margin: 0;
}

@media screen and (max-width: 440px) {
